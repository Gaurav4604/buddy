FROM python:3.9-slim-bullseye

WORKDIR /app

# Install necessary dependencies
RUN apt-get update && apt-get install -y \
    python3-dev \
    python3-pip \
    build-essential \
    libffi-dev \
    libssl-dev \
    git \
    bash \
    docker.io \
    rustc \
    cargo \
    tesseract-ocr \
    poppler-utils \
    libglib2.0-0 \
    && apt-get clean

# Create a virtual environment named 'buddy' for Python dependencies
RUN python3 -m venv /opt/buddy

# Activate the virtual environment and upgrade pip
RUN /opt/buddy/bin/pip install --upgrade pip

# Set the virtual environment to be the default for any subsequent commands
ENV PATH="/opt/buddy/bin:$PATH"

# Install the Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir pytesseract chromadb llama_index pdf2image numpy onnxruntime fastapi uvicorn ollama

COPY app.py /app/app.py
EXPOSE 8000

CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000"]
